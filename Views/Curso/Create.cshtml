@model Curso

@{
    ViewData["Title"] = "Creaci√≥n de Curso";
}

<h1>@ViewData["Title"]</h1>
<h3>@ViewBag.Mensaje</h3>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div asp-validation-summary="All">
            </div>

            <form method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Nombre"></label>
                        <input class="form-control form-control-sm" type="text" asp-for="Nombre">
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Direccion"></label>
                        <input class="form-control form-control-sm" type="text" asp-for="Direccion">
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Jornada"></label>
                        <!--<input class="form-control form-control-sm" type="text" asp-for="Jornada">-->
                        @Html.DropDownList("Jornada", Html.GetEnumSelectList<TiposJornada>(),"Seleccionar jornada",new {
                                       @class ="form-control form-control-sm"})
                    </div>

                    <input class="btn btn-outline-primary btn-block" type="submit" value="Registrar">
                </div>
            </form>
        </div>
    </div>
</div>